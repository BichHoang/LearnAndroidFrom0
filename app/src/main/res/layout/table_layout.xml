    <TableRow>
        <TextView
            android:textSize="20sp"
            android:background="@color/colorAccent"
            android:layout_span="2"
            android:text="Table Row 1 Column 1" />
    </TableRow>

    <TableRow>
        <TextView
            android:textSize="20sp"
            android:text="Table Row 2 Column 1"/>

        <TextView
            android:textSize="20sp"
            android:text="Table Row 2 Column 2"/>
    </TableRow>

    <TableRow>
        <TextView
            android:textSize="20sp"
            android:text="Table Row 2 Column 1"/>

        <TextView
            android:textSize="20sp"
            android:text="Table Row 2 Column 2"/>

        <TextView
            android:textSize="20sp"
            android:text="Table Row 2 Column 3"/>
